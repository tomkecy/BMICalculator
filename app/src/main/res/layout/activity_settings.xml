<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cybulski.tomasz.tomaszcybulskilab1.Activities.SettingsActivity">

    <RadioGroup
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/text_view_unit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_label"
            android:textSize="20sp"
            />
        <RadioButton
            android:id="@+id/radio_button_metric_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/metric_units"
            android:textSize="20sp"/>
        <RadioButton
            android:id="@+id/radio_button_imperial_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/imperial_units"
            android:textSize="20sp"/>
    </RadioGroup>

</RelativeLayout>
